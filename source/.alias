
# Filesystem
alias l="ls -lash"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# Git
alias gco="echoeval git checkout" && exists __git_complete && __git_complete gco _git_checkout
alias gfo="echoeval git fetch origin"
alias gpo="echoeval git push origin"
alias gdl="echoeval gitdiffless"
alias gstat="echoeval git status"
alias glog="echoeval git log --pretty=oneline"

# Laravel
alias pa='php artisan'
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'

# Misc
alias reload="source ~/.bashrc"
alias space="ncdu /"
alias please="sudo"
alias serve="python3 -m http.server"
